<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/background_search"
    android:padding="12dp">

    <ImageView
        android:id="@+id/search_icon_veg"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_item_image"
        app:srcCompat="@drawable/ic_non_veg" />

    <TextView
        android:id="@+id/search_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/metropolis_semibold"
        android:text="Item Name"
        android:textColor="@color/black_900"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_icon_veg" />

    <TextView
        android:id="@+id/search_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/metropolis_semibold"
        android:text="$420"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/search_item_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_item_name"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/search_item_image"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="48dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/search_item_name"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:srcCompat="@drawable/image_pizza_restaurant" />

    <TextView
        android:id="@+id/search_item_Add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_button"
        android:elevation="2dp"
        android:fontFamily="@font/metropolis_bold"
        android:gravity="center"
        android:padding="8dp"
        android:text="ADD"
        android:textColor="@color/green_700"
        app:layout_constraintBottom_toBottomOf="@+id/search_item_image"
        app:layout_constraintEnd_toEndOf="@+id/search_item_image"
        app:layout_constraintStart_toStartOf="@+id/search_item_image"
        app:layout_constraintTop_toBottomOf="@+id/search_item_image" />
</androidx.constraintlayout.widget.ConstraintLayout>